<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起点："
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/qd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起点："
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="终点："
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/zd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起点："
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="票价："
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/pj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起点："
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="里程："
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/lc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="票价："
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="站点："
        android:textColor="#000000"
        android:textSize="15dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <TextView
        android:id="@+id/xyb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/yuanjiaolandibiankuang"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/fh"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/yuanjiaolandibiankuang"
        android:gravity="center"
        android:text="返回上一级目录"
        android:textColor="@color/white"
        android:textSize="20dp" />

</LinearLayout>