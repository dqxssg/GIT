<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.Design.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#eee</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!--    TabLayout字体大小设置-->
    <style name="tab_textsize">
        <item name="android:textSize">26px</item>
    </style>
    <!--    Spinner字体大小设置-->
    <style name="life_spinner_style" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">26px</item>
        <item name="android:scrollbarSize">26px</item>
    </style>
</resources>
